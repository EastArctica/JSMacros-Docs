          "description": "The rotation angles (x, y, z) in degrees"
        },
        {
          "name": "sizes",
          "type": "Pos2D",
          "description": "The width and height of the surface"
        },
        {
          "name": "minSubdivisions",
          "type": "int",
          "description": "Minimum subdivisions for rendering quality"
        },
        {
          "name": "renderBack",
          "type": "boolean",
          "description": "Whether to render the back side of the surface"
        },
        {
          "name": "cull",
          "type": "boolean",
          "description": "Whether to enable depth culling for performance"
        }
      ]
    }
